@model PagedList.IPagedList<DrustveneMrezev3.Models.MovieListModel>
@{
    ViewBag.Title = "MovieRecommendations";
}

<h2> Select recommendation mode: </h2>

<div class="jumbotron">

    <div class="row">
        <div class="col-sm-4">
            <a href=@Url.Action("MovieRecommendations", "Manage", new {recommendationValue = "1"}) class="btn btn-primary btn-lg">Genre recommendations</a>
        </div>

        <div class="col-sm-4">
            <a href=@Url.Action("MovieRecommendations", "Manage", new {recommendationValue = "2"}) class="btn btn-primary btn-lg">Actor recommendations</a>
        </div>

        <div class="col-sm-4">
            <a href=@Url.Action("MovieRecommendations", "Manage", new {recommendationValue = "3"}) class="btn btn-primary btn-lg">Smart recommendations</a>
        </div>
    </div>
</div>

@if (@Model.Count() != 0)
{
    <h3>Recommended movies:</h3>

    @Html.Partial("ShowRecommendMovies", @Model)

}


