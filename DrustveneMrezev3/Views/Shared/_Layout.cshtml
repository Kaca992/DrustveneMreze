<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Super duper application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}
<div class="navbar navbar-default navbar-static-top ">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span>&nbsp; Home</a></li>
                

                @if (Request.IsAuthenticated)
                {
                    <li><a href="@Url.Action("ShowTweets", "Manage")"><span><img id="homepageicon" src="~/Resources/tweetIcon.jpg"/></span>&nbsp; Tweets</a></li>
                    <li><a href="@Url.Action("ShowUserMovies", "Manage")"><span class="glyphicon glyphicon-facetime-video"></span>&nbsp; My movies</a></li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()


</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Scripts/ManageScripts/RatingScript.js")
@RenderSection("scripts", required: false)
</body>
</html>
